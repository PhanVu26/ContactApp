<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:id="@+id/iv_avatar"
        android:layout_width="match_parent"
        android:background="#A03EB8"
        android:src="@drawable/ic_person_black_24dp"
        android:layout_height="300dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_name"
        android:textColor="#FFF"
        android:textSize="20dp"
        android:layout_alignBottom="@+id/iv_avatar"
        android:layout_marginBottom="20sp"
        android:layout_marginLeft="20sp"
        android:text="Mama"/>
    <ImageView
        android:clickable="true"
        android:id="@+id/btn_change"
        android:onClick="ChangeAvatar"
        android:layout_marginRight="20sp"
        android:layout_marginBottom="20sp"
        android:layout_alignParentRight="true"
        android:layout_alignBottom="@+id/iv_avatar"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/ic_camera"/>
    <RelativeLayout
        android:layout_marginLeft="10dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="16dp"
        android:id="@+id/rl_name"
        android:layout_below="@+id/iv_avatar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:paddingBottom="5dp"
            android:layout_alignBottom="@+id/edt_name"
            android:id="@+id/iv_icon_avatar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_person_black_24dp"/>
        <EditText
            android:hint="Tên"
            android:layout_marginLeft="30dp"
            android:id="@+id/edt_name"
            android:layout_toRightOf="@+id/iv_icon_avatar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <EditText
            android:hint="Tên nick"
            android:layout_below="@+id/edt_name"
            android:layout_marginLeft="30dp"
            android:id="@+id/edt_nickname"
            android:layout_toRightOf="@+id/iv_icon_avatar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_marginLeft="10dp"
        android:layout_marginRight="20dp"
        android:layout_below="@+id/rl_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:paddingBottom="5dp"
            android:layout_alignBottom="@+id/edt_num_phone"
            android:id="@+id/iv_icon_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_phone"/>
        <EditText
            android:hint="Số điện thoại"
            android:layout_marginLeft="30dp"
            android:id="@+id/edt_num_phone"
            android:layout_toRightOf="@+id/iv_icon_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:hint="Di động"
            android:layout_below="@+id/iv_icon_phone"
            android:layout_marginLeft="35dp"
            android:id="@+id/edt_type"
            android:layout_toRightOf="@+id/iv_icon_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
</RelativeLayout>
