<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:id="@+id/iv_avatar"
        android:layout_width="match_parent"
        android:background="#A03EB8"
        android:src="@drawable/ic_person_black_24dp"
        android:layout_height="300dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_name"
        android:textColor="#FFF"
        android:textSize="20dp"
        android:layout_above="@+id/cv_contact"
        android:layout_marginBottom="20sp"
        android:layout_marginLeft="20sp"
        android:text="Mama"/>
    <RelativeLayout
        android:layout_marginTop="20sp"
        android:layout_marginRight="20sp"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:clickable="true"
            android:id="@+id/iv_favourite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_star_black" />
        <ImageView
            android:clickable="true"
            android:onClick="EditContact"
            android:layout_marginLeft="15dp"
            android:id="@+id/ib_edit"
            android:layout_toRightOf="@+id/iv_favourite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_edit" />
        <ImageView
            android:clickable="true"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@+id/ib_edit"
            android:id="@+id/ib_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_delete" />
    </RelativeLayout>
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_below="@+id/iv_avatar"
        app:cardCornerRadius="5dp"
        android:elevation="2dp"
        android:id="@+id/cv_contact"
        android:layout_height="wrap_content">
        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:padding="15dp"
            android:layout_height="wrap_content">


            <ImageButton
                android:onClick="Call"
                android:layout_marginRight="20dp"
                android:layout_centerVertical="true"
                android:id="@+id/btn_call"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="#00FFFFFF"
                android:tint="#26A22D"
                app:srcCompat="@drawable/ic_phone"
                tools:ignore="VectorDrawableCompat">
            </ImageButton>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:orientation="vertical"
                android:layout_toRightOf="@+id/btn_call">
                <TextView
                    android:textSize="14dp"
                    android:text="0896512364"
                    android:id="@+id/tv_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000"></TextView>
                <TextView
                    android:textSize="12dp"
                    android:text="Di động"
                    android:id="@+id/tv_num_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000"></TextView>
            </LinearLayout>


            <ImageButton
                android:onClick="SendSMS"
                android:layout_marginRight="20dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:id="@+id/btn_chat"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="#00FFFFFF"
                android:tint="#26A22D"
                app:srcCompat="@drawable/ic_chat"
                tools:ignore="VectorDrawableCompat">
            </ImageButton>
        </RelativeLayout>

    </com.google.android.material.card.MaterialCardView>

</RelativeLayout>
